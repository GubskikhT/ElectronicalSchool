<Page x:Class="ElectronicSchool.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicSchool"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">
    <Grid>
        <Button x:Name="loginButton" Content="Login" Margin="0,105,10.222,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="79" Click="loginButton_Click"/>
        <TextBox x:Name="usernameTextBox" Height="23" Margin="91,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="165"/>
        <Label x:Name="label" Content="username:" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="76"/>
        <Label x:Name="label1" Content="password:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="76"/>
        <Label x:Name="textLabel" Content="Please, enter your credentials." HorizontalAlignment="Left" Height="38" Margin="10,10,0,0" VerticalAlignment="Top" Width="276"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="91,77,0,0" VerticalAlignment="Top" Width="165" Height="23"/>
    </Grid>
</Page>
